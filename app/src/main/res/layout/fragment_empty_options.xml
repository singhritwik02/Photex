<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorExtraExtraLightGray"
    tools:context=".emptyOptions">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/options_graphic"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            app:tint="@color/matte_black_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add or tap on an item to edit."
            android:textColor="@color/matte_black_light"
            android:layout_gravity="center"
            android:fontFamily="@font/avenir_next_regular"
            android:textSize="14sp"
            android:layout_margin="8dp"
            />

    </LinearLayout>


</FrameLayout>