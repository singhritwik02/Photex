<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vertical"
        android:fontFamily="@font/avenir_next_bold"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:textSize="10sp"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/ptb_VerticalSeekBar"
        android:layout_marginTop="4dp"
        android:thumb="@drawable/vertical_thumb"
        android:progressTint="@color/darkYellow"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horizontal"
        android:fontFamily="@font/avenir_next_bold"
        android:textColor="@color/black"
        android:layout_margin="8dp"

        android:textSize="10sp"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:thumb="@drawable/horizontal_thumb"
        android:id="@+id/ptb_HorizontalSeekBar"
        android:progressTint="@color/darkYellow"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alpha"
        android:fontFamily="@font/avenir_next_bold"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:textSize="10sp"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:id="@+id/pcb_AlphaSeekBar"
        android:thumb="@drawable/alpha_thumb"
        android:progressTint="@color/darkYellow"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/ptb_ColorRecycler"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:fontFamily="@font/avenir_next_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:id="@+id/pcb_ClearButton"
        />
    </ScrollView>

</LinearLayout>