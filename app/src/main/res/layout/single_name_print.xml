<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:weightSum="100"
    >
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:layout_gravity="center"
        android:src="@drawable/select_insert"
        android:layout_margin="8dp"
        android:id="@+id/snp_Thumbnail"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="70"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="usrname"
        android:fontFamily="@font/avenir_next_bold"
        android:textColor="@color/black"
        android:id="@+id/snp_Username"
        android:textSize="14sp"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:layout_gravity="center"
        android:src="@drawable/delete_name_print"
        android:layout_margin="8dp"
        android:id="@+id/snp_delete"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:layout_gravity="center"
        android:src="@drawable/name_print_unselected"
        android:layout_margin="8dp"
        android:id="@+id/snp_selection"
        />


</LinearLayout>