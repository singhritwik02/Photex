<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/sl_mainBack"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/layer_background"
        app:layout_constraintTop_toTopOf="parent"
        >
    <ImageView
        android:id="@+id/sl_Image"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:ellipsize="end"
        android:fontFamily="@font/avenir_next_bold"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:text="Sticker"
        android:textColor="@color/black"
        android:id="@+id/sl_Text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/sl_Image"
        app:layout_constraintStart_toEndOf="@id/sl_Image"
        app:layout_constraintTop_toTopOf="@id/sl_Image" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>